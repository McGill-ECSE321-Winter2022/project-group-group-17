<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">
    <fragment
        android:id="@+id/loginFragment"
        android:name="ca.mcgill.ecse321.grocerystoresystem.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/SecondFragment" />
        <action
            android:id="@+id/login_to_personal_orders"
            app:destination="@id/recycler_view_personal_orders" />

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="ca.mcgill.ecse321.grocerystoresystem.RegisterFragment"
        android:label="register_fragment"
        tools:layout="@layout/register_fragment" />

    <fragment
        android:id="@+id/recycler_view_personal_orders"
        android:name="ca.mcgill.ecse321.grocerystoresystem.ViewPersonalOrdersFragment"
        android:label="View Personal Orders"
        tools:layout="@layout/view_personal_orders_v2">

    </fragment>
</navigation>